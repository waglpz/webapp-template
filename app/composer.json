{
  "name": "@PROJECT_NAME@/webapp",
  "description": "@PROJECT_NAME@ Web / Rest API Application",
  "license": "MIT",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "ext-apcu": "*",
    "ext-fileinfo": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-mysqli": "*",
    "ext-pcntl": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ajgl/composer-symlinker": "^0.2.1",
    "swagger-api/swagger-ui": "^3.31",
    "symfony/dotenv": "^5.1",
    "waglpz/webapp": "dev-develop"
  },
  "require-dev": {
    "doctrine/coding-standard": "^9.0",
    "ifsnop/mysqldump-php": "^2.9",
    "liuggio/fastest": "^1.8",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.5",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.1",
    "phpstan/phpstan-webmozart-assert": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/var-dumper": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "@PROJECT_NS@\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "@PROJECT_NS@\\Tests\\": "tests/",
      "Waglpz\\Webapp\\Tests\\": "vendor/waglpz/webapp/tests/"
    }
  },
  "replace": {
  },
  "scripts": {
    "waglpz:cli": "cli",
    "waglpz:cs-check": "phpcs -p --parallel=12",
    "waglpz:cs-fix": "phpcbf -p --parallel=12",
    "waglpz:pre-test": "php bin/recreate-test-db.php",
    "waglpz:db:migrate": "@waglpz:cli db:migrations migrate",
    "waglpz:test:normal": "phpunit --colors=always tests",
    "waglpz:analyse": [
      "phpstan analyse --configuration=phpstan.neon bin/ config/ public/ src/ tests/ --level max"
    ],
    "waglpz:test:parallel": "find tests/ -name '*Test.php' | ./vendor/liuggio/fastest/fastest 'vendor/phpunit/phpunit/phpunit --testdox {};'",
    "waglpz:check:ci": [
      "@waglpz:cli db:migrations migrate",
      "@waglpz:pre-test",
      "@waglpz:cs-check",
      "@waglpz:analyse",
      "@waglpz:test:parallel"
    ],
    "waglpz:check:normal": [
      "@waglpz:cs-check",
      "@waglpz:analyse",
      "@waglpz:test:normal"
    ],
    "waglpz:check:parallel": [
      "@waglpz:cs-check",
      "@waglpz:analyse",
      "@waglpz:test:parallel"
    ],
    "publish-assets": [
      "Ajgl\\Composer\\ScriptSymlinker::createSymlinks"
    ],
    "post-install-cmd": [
      "@publish-assets",
      "cp -n vendor/waglpz/webapp/config/cli.php config/"
    ],
    "post-update-cmd": [
      "@publish-assets",
      "cp -n vendor/waglpz/webapp/config/cli.php config/"
    ]
  },
  "extra": {
    "ajgl-symlinks": {
      "swagger-api/swagger-ui": {
        "dist": "public/bundles/swagger-api"
      }
    }
  }
}
